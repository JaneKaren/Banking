<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Banking" %></title>
    <%= stylesheet_link_tag "blueprint/screen" -%>
    <%= stylesheet_link_tag "menu_style" %>
    <%= stylesheet_link_tag "calendar_date_select/plain" %>
    <%= stylesheet_link_tag "banking" %>
    <%= javascript_include_tag :defaults %>
    <%= calendar_date_select_includes %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div>
      <% if current_user -%>
        <%= render :partial => '/layouts/header' -%>
      <% end -%>
    </div>

    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>

    <% if current_user -%>
      <%= render :partial => '/layouts/footer' -%>
    <% end -%>

  </body>
</html>
